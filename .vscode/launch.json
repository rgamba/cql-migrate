{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config.python.pythonPath}",
            "program": "${workspaceRoot}/migrate.py",
            "console": "integratedTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit"
            ],
            "args": [
                "migrate",
                "4",
                "--simulate"
            ],
            "env": {
                "CASSANDRA_SETTINGS": "settingstest"
            }
        }
    ]
}